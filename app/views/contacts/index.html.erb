<h1><%= "Listing Contacts for: #{@client.name}" %></h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <!--<th>Client</th>--> 
    <th>Active?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr <% if contact.active == false %>class="inactive"<% end %>>
    <td><%= contact.first_name %></td>
    <td><%= contact.last_name %></td>
    <td><%= contact.email %></td>
    <!--<td><%= @client.name %></td>--> 
    <td><%= contact.active %></td>
    <td><%= link_to 'Show', [@client, contact] %></td>
    <td><%= link_to 'Edit', edit_client_contact_path(@client, contact) %></td>
    <td><%= link_to 'Destroy', [@client, contact], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="nav">
<p>
    <b>TASKS:</b>    
    <%= link_to '[New Contact]', new_client_contact_path(@client) %>
</p>
<p>
    <b>VIEWS:</b>
    <%= link_to 'Client Details', client_path(@client) %> |
    <%= link_to 'Client List', clients_path %>
</p>
</div>



