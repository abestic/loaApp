<h1><%= "Listing LOAs for: #{@client.name}" %></h1>

<table>
  <tr>
    <th>Client</th>
    <th>Carrier</th>
    <th>Effective Date</th>
    <th>Expiration Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @loas.each do |loa| %>
  <tr>
    <td><%= @client.name %></td>
    <td><%= loa.client_id %></td>
    <td><%= loa.effective_date %></td>
    <td><%= loa.expiration_date %></td>
    <td><%= link_to 'Show', [@client, loa] %></td>
    <td><%= link_to 'Edit', edit_client_loa_path(@client, loa) %></td>
    <td><%= link_to 'Destroy', [@client, loa], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

